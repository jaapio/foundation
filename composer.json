{
  "name": "api-clients/foundation",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "guzzlehttp/guzzle": "^6.0",
    "react/promise": "^2.2",
    "wyrihaximus/react-guzzle-psr7": "^1.0",
    "api-clients/hydrator": "dev-master",
    "api-clients/resource": "dev-master",
    "clue/block-react": "^1.1",
    "reactivex/rxphp": "^1.2",
    "react/cache": "^0.4.1",
    "wyrihaximus/ticking-promise": "^1.6",
    "doctrine/annotations": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.2.3",
    "squizlabs/php_codesniffer": "^2.6",
    "phake/phake": "^2.3"
  },
  "suggest": {
    "api-clients/resource-generator": "Easy wireframing of resources",
    "wyrihaximus/react-cache-filesystem": "Filesystem cache",
    "wyrihaximus/react-cache-redis": "Redis cache"
  },
  "autoload": {
    "psr-4": {
      "ApiClients\\Foundation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ApiClients\\Tests\\Foundation\\": "tests/",
      "ApiClients\\Tests\\Foundation\\Hydrator\\": "vendor/api-clients/hydrator/tests/"
    }
  },
  "scripts": {
    "ensure-installed": "php -r 'exit((int)(file_exists(__DIR__ . DIRECTORY_SEPARATOR . \"vendor\") === false));' || composer install --ansi --prefer-dist",
    "cs": [
      "@ensure-installed",
      "./vendor/bin/phpcs --standard=PSR2 src/"
    ],
    "unit": [
      "@ensure-installed",
      "./vendor/bin/phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml"
    ],
    "qa-all": [
      "@ensure-installed",
      "@cs",
      "@unit"
    ],
    "qa-ci": [
      "@qa-all"
    ],
    "qa-contrib": [
      "@qa-all"
    ],
    "ci-coverage": [
      "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    ]
  }
}
